@model IEnumerable<ExamenWeb.Models.Visita>

@{
    ViewBag.Title = "Index";
}

<h2>Visitas</h2>

<p>
    @Html.ActionLink("Nueva visita", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Nombre contacto")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Motivo)
        </th>
        <th>
            @Html.DisplayName("Nombre completo")
        </th>
        <th>
            @Html.DisplayName("Fecha visita")
        </th>
        <th>
            @Html.DisplayName("Hora de entrada")
        </th>
        <th>
            @Html.DisplayName("Hora de salida")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contacto.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Motivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCompleto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVisita)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraEntrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraSalida)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.VisitaID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.VisitaID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.VisitaID })
        </td>
    </tr>
}

</table>
